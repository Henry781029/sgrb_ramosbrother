<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:context=".SGRB_register">

    <ScrollView
        android:layout_width="356dp"
        android:layout_height="703dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:background="@drawable/plantilla"
                android:backgroundTint="@color/material_on_background_disabled"
                app:cardCornerRadius="30dp"
                app:cardElevation="15dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:id="@+id/registro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/material_on_primary_disabled"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRegistrarse2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Registrar"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imglogo2"
                        android:layout_width="128dp"
                        android:layout_height="105dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/ic_sgrb_logo" />

                    <LinearLayout
                        android:id="@+id/lynombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvnombreusuario"
                            android:layout_width="229dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Nombre completo:"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/etNombre"
                            android:layout_width="257dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_textos"
                            android:ems="10"
                            android:hint="Name"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyemail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="193dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="E-mail (Usuario):"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="257dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_textos"
                            android:ems="10"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lypais"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvpais"
                            android:layout_width="194dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Pais:"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/etPais"
                            android:layout_width="257dp"
                            android:layout_height="23dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_textos"
                            android:ems="10"
                            android:hint="Country"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyciudad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvciudad"
                            android:layout_width="207dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Ciudad:"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/etCiudad"
                            android:layout_width="255dp"
                            android:layout_height="23dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_textos"
                            android:ems="10"
                            android:hint="City"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyrol"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvrol2"
                            android:layout_width="232dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="Rol:"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <RadioGroup
                            android:layout_width="216dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/rbusuario"
                                android:layout_width="107dp"
                                android:layout_height="20dp"
                                android:text="Usuario"
                                android:textColor="@color/white"
                                tools:ignore="TouchTargetSizeCheck" />

                            <RadioButton
                                android:id="@+id/rbvendedor"
                                android:layout_width="112dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:checked="true"
                                android:text="Vendedor"
                                android:textColor="@color/white"
                                tools:ignore="TouchTargetSizeCheck" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lycontraseña"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvcontraseña"
                            android:layout_width="207dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Contraseña:"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/etClaveActual"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_textos"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lycomfirmasr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvcontraseña2"
                            android:layout_width="207dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Confirmar contraseña:"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/etClaveNueva"
                            android:layout_width="249dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_textos"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnregistrar"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:background="@drawable/bordes_botones"
                            android:gravity="center"
                            android:text="REGISTRASE"
                            android:textAllCaps="false"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>