<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/plantilla"
    android:layout_height="match_parent"
    tools:context=".SGRB_actualizarCliente">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/plantilla"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/plantilla"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@drawable/plantilla"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/plantilla"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvtitulo1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="30dp"
                            android:text="Actualizar datos Usuario" />

                        <ImageView
                            android:id="@+id/imglogo1"
                            android:layout_width="198dp"
                            android:layout_height="153dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            app:srcCompat="@drawable/logo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvmensaje1"
                                android:layout_width="match_parent"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:paddingLeft="10dp"
                                android:layout_height="29dp"
                                android:text="Nombre Completo" />

                            <EditText
                                android:id="@+id/etnameUpdateUser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_textos"
                                android:paddingLeft="10dp"
                                android:paddingEnd="10dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:hint="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvmensaje2"
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:paddingLeft="10dp"
                                android:text="Email"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etshopUpdateEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_textos"
                                android:ems="10"
                                android:hint="Email"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:paddingEnd="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvmensaje3"
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:paddingLeft="10dp"
                                android:text="Shop"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etshopUpdateShop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_textos"
                                android:ems="10"
                                android:hint="Shop"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:paddingEnd="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbUpdatepassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:text="Update password" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvmensaje4"
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:paddingLeft="10dp"
                                android:text="Current password"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etCurrentpassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_textos"
                                android:ems="10"
                                android:hint="Current password"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:paddingEnd="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvmensaje5"
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:paddingLeft="10dp"
                                android:text="New Password"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etNewPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_textos"
                                android:ems="10"
                                android:hint="New Password"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:paddingEnd="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvmensaje6"
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:paddingLeft="10dp"
                                android:text="Confirm New Password"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etconfirmNewPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_textos"
                                android:ems="10"
                                android:hint="Confirm New Password"
                                android:inputType="textPersonName"
                                android:paddingLeft="10dp"
                                android:paddingEnd="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="40dp"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnActualizar"
                                android:layout_width="122dp"
                                android:layout_height="38dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_botones"
                                android:gravity="center"
                                android:text="UPDATE"
                                android:textAllCaps="false"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/btnBack"
                                android:layout_width="122dp"
                                android:layout_height="38dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bordes_botones"
                                android:gravity="center"
                                android:text="Back"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>