<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img2"
    android:layout_height="match_parent"
    tools:context=".SGRB_User">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="682dp"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="@color/material_on_background_disabled"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/Logo"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginBottom="8dp"
                                android:background="@color/material_on_background_disabled"
                                android:orientation="horizontal"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">

                                <TextView
                                    android:id="@+id/tvtitulo4"
                                    android:layout_width="608dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="Shop Gamer RamosBrother"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/imglogo4"
                                    android:layout_width="336dp"
                                    android:layout_height="41dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/logo" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/material_on_background_disabled"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/usuario"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/material_on_background_disabled"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp">

                                    <TextView
                                        android:id="@+id/tvNombre"
                                        android:layout_width="239dp"
                                        android:layout_height="wrap_content"
                                        android:background="@color/material_on_background_disabled"
                                        android:foregroundTint="#020202"
                                        android:textColor="@color/white"
                                        android:text="TextView"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvrol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@color/material_on_background_disabled"
                                        android:gravity="right"
                                        android:text="TextView"
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lyOpciones"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/material_on_background_disabled"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="170dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="11dp"
                                        android:layout_weight="1"
                                        android:background="@color/material_on_background_disabled"
                                        app:srcCompat="@drawable/logo" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@color/material_on_background_disabled"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView18"
                                            android:layout_width="238dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/bordes_textos"
                                            android:gravity="center"
                                            android:text="Actualizar datos de usuario"
                                            android:textColor="#050505"
                                            android:textSize="18sp"
                                            android:textStyle="bold|italic" />

                                        <TextView
                                            android:id="@+id/textView12"
                                            android:layout_width="227dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/bordes_textos"
                                            android:gravity="center"
                                            android:text="Productos Adquiridos"
                                            android:textColor="#050505"
                                            android:textSize="18sp"
                                            android:textStyle="bold|italic" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/material_on_background_disabled"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvFirestoreProductList"
                                android:layout_width="369dp"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>